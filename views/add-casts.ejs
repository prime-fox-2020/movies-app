<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>add new cast page</title>
    <%- include('partials/style-form')%>
    <%- include('partials/style-nav-bar')%>
</head>
<body>
    <%- include('partials/nav-bar')%>
    <div class="container">
        <h1>ADD NEW CAST</h1>
        <form action="/casts/add" method="post">
            <div class="row">
                <div class="col-50">
                    <%if (error === '') {%>
                        <p><%= error %></p>
                    <%}%>
                    <label>First Name:</label><br>
                    <input type="text" name="first_name"><br><br>
                </div>
            </div>

            <div class="row">
                <div class="col-50">
                    <%if (error === '') {%>
                        <p><%= error %></p>
                    <%}%>
                    <label>Last Name:</label><br>
                    <input type="text" name="last_name"><br><br>
                </div>
            </div>

            <div class="row">
                <div class="col-50">
                    <%if (error === '') {%>
                        <p><%= error %></p>
                    <%}%>
                    <label>Phone Number:</label><br>
                    <input type="text" name="phone_number"><br><br>
                </div>
            </div>

            <div class="row">
                <div class="col-50">
                    <%if (error === '') {%>
                        <p><%= error %></p>
                    <%} else if (error === 'Released Year Tidak Valid') {%>
                        <p><%= error %></p>
                    <%}%>
                    <label>Birth Year:</label><br>
                    <input type="number" name="birth_year"><br><br>
                </div>
            </div>

            <div class="row">
                <div class="col-50">
                    <label>Gender:</label><br>
                    <input type="radio" id="male" name="gender" value="Male">
                    <label for="male">Male</label>
                    <input type="radio" id="female" name="gender" value="Female">
                    <label for="female">Female</label><br><br>
                </div>
            </div>
            <div class="row">
                <button type="submit">Add</button>
                <button><a href="/casts">Cancel</a></button>
            </div>
        </form>
    </div>
    
    
</body>
</html>
