<%- include ('./partials/header', {title: 'ADD CAST TO MOVIE'}) %>


<form action="/movies/<%= movies.id%>/addCastToMovie" method = 'POST'>
  <h1><%=movies.name %>  </h1>

<% if(error){ %>
<p> <%=error%> </p>
 <% } %>


<select name="castId" >
<% for(let i = 0; i < casts.length; i++){ %>
<option value="<%=casts[i].id%>"><%= casts[i].fullName() %> </option>
 <% } %>
</select> <br>
<h1>Role</h1>
<input type="text" name = 'role' placeholder="Input Role"><br>







<button type="submit">Click</button>
</form>

<h1>Cast List</h1>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Role</th>
     
      
  </thead>

<tbody>
<% if(data) { %>
<% for(let i = 0; i < data.length; i++){ %>
  <% for(let j = 0; j < casts.length; j++){ %>
   <% if(data[i].CastId === casts[j].id){ %>
    <tr> 
    <td><%=casts[j].fullName()   %></td>
     <td><%= data[i].role   %></td>

     </tr>
   <% } %>
  <%} %>
<%} %>
<%}%>
</tbody>
</table>







<%- include ('./partials/footer') %>