<%- include('./parts/header') %>
<h1 class="text-center"><%= header %></h1>

<div class="container w-25 p-3 text-center alert alert-secondary" role="alert">
    <h2><%= movieTitle %></h2>
</div>

<h2 class="text-center">List Cast</h1>
<%- include('./parts/table', {list, content:'cast'}) %>

<%- include('./parts/alerts') %>

<div class="container w-25 p-3 text-center">
    <form action="" method="POST">
        <div class="form-group">
            <label for="actor">Actor</label><br>
            <select name="actorId">
                <option value="">-- Choose --</option>
                <% for (let actor of casts) { %>
                    <option value="<%= actor.id %>"> <%= actor.name %> </option>
                <% } %>
            </select>
        </div>
        <div class="form-group"> 
            <label>Role</label>
            <input type="text" class="form-control" name="role" placeholder="e.g. Main Character">
        </div>
        <div class="form-group">
            <br><button type="submit" name="movieId" value="<%= movieId %>" class="btn btn-danger">Submit</button>
            <a href="/movie" class="btn btn-warning" role="button" aria-pressed="true">Cancel</a>
        </div>
    </form>
</div>

<%- include('./parts/footer') %>