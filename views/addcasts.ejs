<%- include('partials/top.ejs') %>

<h1>Add A Cast</h1>

<form action="/casts/add" method="POST">
  <label for="first_name">First Name</label><br>
  <input type="text" id="first_name" name="first_name" placeholder="e.g John" autofocus required>
  <br><br>
  <label for="last_name">Last Name</label><br>
  <input type="text" id="last_name" name="last_name" placeholder="e.g Doe" required>
  <br><br>
  <label for="birth_year">Birth Year</label><br>
  <input type="number" id="birth_year" name="birth_year" placeholder="e.g 2010" maxlength="4" required>
  <br><br>
  <label for="phone_number">Phone Number</label><br>
  <input type="text" id="phone_number" name="phone_number" placeholder="e.g 080989999" required>
  <br><br>
  <label for="gender">Gender</label>
  <div class="genderselection">
    <input type="radio" id="gender" name="gender" value="Male">
    <label for="gender">Male</label><br>
    <input type="radio" id="gender" name="gender" value="Female">
    <label for="gender">Female</label><br>  
  </div>
  <br>
  <button type="submit">Submit</button>
  <button><a href="/casts">Cancel</a></button>
</form>

<%- include('partials/bottom.ejs') %>