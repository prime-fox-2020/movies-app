<%- include('./partial/header')%>
  <div class="d-md-flex h-md-100 align-items-center">

    <!-- First Half -->
    
    <div class="col-md-6 p-0 bg-indigo h-md-100">
        <div class="text-white d-md-flex align-items-center h-100 p-5 text-center justify-content-center">
            <div class="logoarea pt-5 pb-5">
                <h1><%= data.name%></h1>
            </div>
        </div>
    </div>
    
    <!-- Second Half -->
    
    <div class="col-md-6 p-0 bg-white h-md-100 loginarea">
        <div class="d-md-flex align-items-center h-md-100 p-5 justify-content-center">
            <div>
                <form class="px-4 py-3" method="POST" action="/movies/addrole/<%= data.id%>">
                <h1>ADD CAST: </h1>
                <% if(error) { %>
                    <p><%= error %></p>
                <% } %>
                <div>
                    <label>Actor: </label>
                    <select name="actor">
                        <option value="">SELECT ACTOR</option>
                        <% for ( let i=0 ; i < dataactor.length ; i++ ) { %>
                            <option value="<%= dataactor[i].id %>"><%= dataactor[i].first_name %> <%= dataactor[i].last_name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label>Role: </label>
                    <input type="text" class="form-control" name="role">
                </div>
                  <button type="submit">Submit</button>
                  <a class="btn btn-primary" href="/casts" role="button">Cancel</a>
                </form>
              </div>
        </div>
    </div>
        
    </div>

    <table class="table" border="1">
        <thead>
          <tr>
            <th scope="col">Actor</th>
            <th scope="col">Role</th>
          </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < data.Casts.length ; i++ ) { %>
                <tr>
                    <td><%= data.Casts[i].first_name %> <%= data.Casts[i].last_name %></td>
                    <td><%= data.Casts[i].MovieCast.role %></td>
                </tr>
            <% } %>
        </tbody>
      </table>
    <style>
    @media (min-width: 768px) {
    .h-md-100 { height: 80vh; }
    }
    .btn-round { border-radius: 30px; }
    .bg-indigo { background: indigo; }
    .text-cyan { color: #35bdff; }
    </style>
</body>
<%- include('./partial/footer')%>