<%-  include ('./partials/header', {title: 'Cast'}) %>


<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand" href='/'>Home</a> 
  <a class="navbar-brand" href='/casts/add'> <button>Add Cast</button> </a>
</nav>
<h1>Cast List</h1>
<%if(msg){ %>
  <p><%=msg%></p>
  <%} %>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Birth Year</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Gender</th>
      <th scope="col">Action</th>
      
  </thead>
  <tbody>

  <%  if(casts){ %>

    <% for(let i = 0; i < casts.length; i++){ %>
     
      <tr>
        <td><%= casts[i].fullName()%></td>
        <td><%= casts[i].birth_year %></td>
        <td><%= casts[i].phone_number %></td>
        <td><%= casts[i].gender %></td>
        
        <td> <a href="/casts/<%=casts[i].id %>/edit"> EDIT</a> ||  <a href="/casts/<%=casts[i].id %>/question">Delete </a> ||  <a href="/casts/<%=casts[i].id%>/seeMovies">See Movies</a>  </td>
      </tr>

   <% } %>
  <%}%>
  </tbody>
</table>



<%-  include ('./partials/footer') %>