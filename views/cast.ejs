<%- include('partials/header', { title: 'Cast List' }) %>

<a class="btn btn-primary btn-lg" href="/" role="button">Go back to Home Page</a>
<a class="btn btn-primary btn-lg" href="/cast/add" role="button">Add Cast</a>
<div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Birth Year</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Gender</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% object.forEach(item => { %>
      <tr>
        <td><%= item.first_name %> <%= item.last_name %></td>
        <td><%= item.birth_year %></td>
        <td><%= item.phone_number %></td>
        <td><%= item.gender %></td>
        <td>
          <a class="btn btn-primary btn-sm" href="/cast/edit/<%= item.id %>" role="button">Edit</a>
          <a class="btn btn-danger btn-sm" href="/cast/delete/<%= item.id %>" role="button" onclick="return confirm('Are you sure?')">Delete</a>
          <a class="btn btn-primary btn-sm" href="/cast/movie/<%= item.id %>" role="button">See Movies</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>