<!doctype html>
<html lang="en">

<head>
    <title>Casts</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top" style="background-color: #3d93d1;">
        <div class="container">
            <a class="navbar-brand" href="/">Philem</a>
            <div class="collapse navbar-collapse" id="collapsibleNavId">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/productionHouses">Production Houses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/movies">Movies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cast">Cast</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search">
                    <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="jumbotron jumbotron-fluid mt-5">
        <div class="container">
            <div class="mb-5 align-items-center">
                <h3 class="display-3">List Casts</h3>
                <div class="float-right">
                    <a href="/cast/add" class="float-lg-right"><button class="btn btn-primary ">Add Cast</button></a>
                </div>
            </div>

            <% if (msg) { %>
            <div class="alert alert-success col-6" role="alert">
                <h6 class="alert-heading"><%= msg %> </h6>
            </div>
            <% } %>

            <% if (data) { %>
            <table class="table table-striped table-inverse table-responsive">
                <thead class="thead-inverse">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Birth Year</th>
                        <th>Phone Number</th>
                        <th>Genre</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(el => { %>
                    <tr>
                        <td scope="row"><%= el.id %> </td>
                        <td><%= el.getFullName() %></td>
                        <td><%= el.birth_year %></td>
                        <td><%= el.phone_number %></td>
                        <td><%= el.gender %></td>
                        <td>
                            <a href="/cast/<%= el.id %>/edit "><button class="btn btn-primary">Edit</button></a>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-danger" data-toggle="modal"
                                data-target="#deleteCast-<%= el.id %>">
                                Delete
                            </button>
                            <a href="/cast/<%= el.id %>/seeMovie "><button class="btn btn-outline-success">See
                                    Movie</button></a>
                        </td>

                        <!-- Modal -->
                        <div class="modal fade" id="deleteCast-<%= el.id %>" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Confirmation Delete Cast</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        are you sure to delete cast 
                                        with id <p><%= el.id %> </p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Close</button>
                                        <a href="/cast/<%= el.id %>/delete "><button
                                                class="btn btn-danger">Delete</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } %>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
</body>

</html>