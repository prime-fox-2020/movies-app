<%- include('../partials/header') %>

<h3 class="d-inline-block"><%= pageTitle %></h3>
<a href="/casts/add" class="btn btn-info float-right">Add new talent</a>

<% if (alert.type) { %>
  <%- include('../partials/alert') %>
<% } %>

<% if (casts) { %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Birth Year</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Gender</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% casts.forEach((cast, idx) => { %>
        <tr>
          <th scope="row"><%= idx + 1 %></th>
          <td><%= cast.getFullName() %></td>
          <td><%= cast.birth_year %></td>
          <td><%= cast.phone_number %></td>
          <td><%= cast.gender %></td>
          <td><a href="/casts/edit/<%= cast.id %>" class="btn btn-info">Edit</a> &nbsp; <a onclick="return window.confirm('Are you sure want to delete this talent?')" href="/casts/delete/<%= cast.id %>" class="btn btn-danger">Delete</a>
            &nbsp; <a href="/casts/<%= cast.id %>/movies" class="btn btn-info">See Movies</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  
<% } %>

<%- include('../partials/footer') %>