<%- include('../partials/header', {title: cast.getFullName() + ' Movies'}) %>

<h3><%= cast.getFullName() %></h3>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Movie Title</th>
        <th scope="col">Released Year</th>
        <th scope="col">Age when movie released</th>
        <th scope="col">Role</th>
      </tr>
    </thead>
    <tbody>
      <% cast.Movies.forEach((movie, idx) => { %>
        <tr>
          <th scope="row"><%= idx + 1 %></th>
          <td><%= movie.title %></td>
          <td><%= movie.released_year %></td>
          <td><%= helper.ageCalc(movie.released_year, cast.birth_year) %> years old</td>
          <td><%= movie.MovieCast.role %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

<%- include('../partials/footer') %>