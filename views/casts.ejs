<%- include('./partials/header') %> 

<div class="container" style="max-width: 1000px;">
  <h1 class="display-4 mt-5">Casts</h1>
  <a href="/casts/add" class="btn btn-success my-3">Add Casts</a>
  <table class="table table-bordered">
    <thead class="table-info">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Birth Year</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Gender</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% let castId %>
      <% for(let cast of casts) { %>
      <tr>
        <td><%= cast.getFullName() %></td>
        <td><%= cast.birth_year %></td>
        <td><%= cast.phone_number %></td>
        <td><%= cast.gender %></td>
        <td>
          <a href="/casts/<%= cast.id %>/edit" class="btn btn-info">Edit</a>
          <button type="button" class="btn btn-info" data-toggle="modal" data-target="#delete">Delete<% castId = cast.id %></button>
          <a href="/casts/<%= cast.id %>/movies" class="btn btn-info">See Movies</a>
        </td>
      </tr>
      <%}%>

      <!-- Modal -->
      <div class="modal fade" id="delete" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Are you sure to delete this cast?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <a id="reallyDelete" href="/casts/<%= castId %>/delete" class="btn btn-danger">Yes, i am sure</a>
            </div>
          </div>
        </div>
      </div>

    </tbody>
  </table>
  </div>
</div>

<%- include('./partials/footer') %> 