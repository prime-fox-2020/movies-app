    <button><a href="/casts/add">Add new cast</a></button>

    <%if(pesan){%>
        <%=pesan%>
    <%}%>

    <table border="1">
        <thead>
            <tr>
                <td>ID</td>
                <td>NAME</td>
                <td>BIRTH YEAR</td>
                <td>PHONE NUMBER</td>
                <td>GENDER</td>
                <td colspan="3">ACTION</td>
            </tr>
        </thead>
        <tbody>
            <%for (let i in dataCast) {%>
                <tr>
                    <td><%=dataCast[i].id%></td>
                    <td><%=dataCast[i].getFullName()%></td>
                    <td><%=dataCast[i].birth_year%></td>
                    <td><%=dataCast[i].phone_number%></td>
                    <td><%=dataCast[i].gender%></td>
                    <td><button><a href="/casts/edit/<%=dataCast[i].id%>">EDIT</a></button></td>
                    <td><button onclick="return confirm('Apakah anda ingin menghapus data Cast bernama <%=dataCast[i].getFullName()%>')"><a href="/casts/delete/<%=dataCast[i].id%>">DELETE</a></button></td>
                    <td><button><a href="/casts/:id/<%=dataCast[i].id%>">See Movies</a></button></td>
                </tr>
            <%}%>
        </tbody>
    </table>
</body>
</html>