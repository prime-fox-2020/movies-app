<%- include('partials/header', {title: 'List Casts'}) %>

<div class="container">
  <h1>List Casts</h1>
  <div class="d-flex flex-row-reverse bd-highlight">
    <div class="p-2 bd-highlight">
      <a href="/casts/add"><button class="btn btn-primary">Add</button></a>
    </div>
  </div>
  
  <table class="table mt-3">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Birth Year</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Gender</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(el => { %>
        <tr>
          <td><%= el.fullName() %></td>
          <td><%= el.birth_year %></td>
          <td><%= el.phone_number %></td>
          <td><%= el.gender %></td>
          <td>
            <a href="/casts/<%= el.id %>/edit"><button class="btn btn-success">Edit</button></a> | 
            <a href="/casts/<%= el.id %>/delete" onclick="return confirm('Are you sure you want to delete this item?');"><button class="btn btn-danger">Delete</button></a> | 
            <a href="/casts/<%= el.id %>/movies"><button class="btn btn-info">See Movies</button></a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>