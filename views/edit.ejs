<%- include('./partial/header')%>
<div>
    <form class="px-4 py-3" method="POST" action="/movies/edit/<%= data.id%>">
      <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" value="<%= data.name%>">
      </div>
      <div class="form-group">
        <label>Released Year</label>
        <input type="text" class="form-control" name="releasedyear" value="<%= data.released_year%>">
      </div>
      <div>
        <label>Genre: </label>
        <br>
        <select name="genre">
            <option value="">SELECT GENRE</option>
            <option value="horror" <%= data.genre==="horror" ? 'selected' : '' %>>Horror</option>
            <option value="comedy"  <%= data.genre==="comedy" ? 'selected' : '' %>>Comedy</option>
            <option value="drama"  <%= data.genre==="drama" ? 'selected' : '' %>>Drama</option>
            <option value="animasi"  <%= data.genre==="animasi" ? 'selected' : '' %>>Animasi</option>
            <option value="religi"  <%= data.genre==="religi" ? 'selected' : '' %>>Religi</option>
            <option value="thriller" <%= data.genre==="thriller" ? 'selected' : '' %>>Thriller</option>
          </select>
      </div>

        <div>
            <label>Production House: </label>
            <br>
            <select name="prodhouse">
                <option value="">SELECT GENRE</option>
                <option value="Walt Disney Studios" <%= data.ProductionHouseId===1 ? 'selected' : '' %>>Walt Disney Studios</option>
                <option value="Pixar" <%= data.ProductionHouseId===2 ? 'selected' : '' %>>Pixar</option>
                <option value="Warner Bros" <%= data.ProductionHouseId===3 ? 'selected' : '' %>>Warner Bros</option>
                <option value="Universal Pictures" <%= data.ProductionHouseId===4 ? 'selected' : '' %>>Universal Pictures</option>
                <option value="Paramount Pictures" <%= data.ProductionHouseId===5 ? 'selected' : '' %>>Paramount Pictures</option>
              </select>
          </div>
      <button type="submit">Update</button>
      <a class="btn btn-primary" href="/movies" role="button">Cancel</a>
    </form>
  </div>
</body>
<%- include('./partial/footer')%>