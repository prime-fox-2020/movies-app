<!DOCTYPE html>
<html>
    <head>
        <%- include('partials/bootstrap') %>
        <title>Add casts</title>
    </head>
    <body style="position: center;"> 
      <%- include('partials/navbar') %> 
        <h1 style="text-align: center;">Add casts</h1>
        <p style="text-align: center;"><a href="/casts">show all data</a></p>
        <form action="/casts/edit/<%=data.id%>" method = 'POST'>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label > First Name :</label>
                <input type="text" class="form-control" name="first_name" value="<%=data.first_name%>">
              </div>
              <div class="form-group col-md-6">
                <label >Last Name :</label>
                <input type="text" class="form-control" name="last_name" value="<%=data.last_name%>">
              </div>
            </div>
            <div class="form-group col-md-6">
                <label >Birth Year :</label>
                <input type="text" class="form-control" name="birth_year" value="<%=data.birth_year%>">
              </div>
            </div>
            <div class="form-group col-md-6">
                <label >Phone Number :</label>
                <input type="text" class="form-control" name="phone_number" value="<%=data.phone_number%>">
              </div>
            </div>
            <div class="form-group">
                <label>Gender :</label>
                <select name="gender" required>
                  <option ><%=data.gender%></option>
                  <option value="male">Male</option>
                  <option value="female">Female</option>
               </select><br><br>
            </div>
            <button type="submit" name = "submit"class="btn btn-primary mb-2" >Add casts</button>
          </form>
    </body>
    <foot>

    </foot>
</html>
