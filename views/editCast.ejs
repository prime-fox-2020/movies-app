<%- include('./partial/header') %>
<body>
  <%- include('./partial/navbar') %>
  <br><br>
  <form action="/casts/edit/<%=data.id%>" method="POST">
    <form>
      <div class="form-group">
        <label for="first name">First Name</label>
        <input type="name" class="form-control" name="first_name" placeholder="e.g: John" value="<%= data.first_name %>">
      </div>
      <div class="form-group">
        <label for="released year">Last Name</label>
        <input type="last name" class="form-control" name="last_name" placeholder="e.g: Doe" value="<%= data.last_name %>">
      </div>
      <div class="form-group">
        <label for="birth year">Birth Year</label>
        <input type="birth year" class="form-control" name="birth_year" placeholder="e.g: 1972" value="<%= data.birth_year %>">
      </div>
      <div class="form-group">
        <label for="phone number">Phone Number</label>
        <input type="phone number" class="form-control" name="phone_number" placeholder="e.g: 08123456789" value="<%= data.phone_number %>">
      </div>
      <div>
        <label for="gender">Gender</label><br>
        <input type="radio" name="gender" value="male" <%= data.gender === 'male' ? 'checked' : '' %>> Male
        <input type="radio" name="gender" value="female" <%= data.gender === 'female' ? 'checked' : '' %>> Female
      </div>
      <br>
      <button type="submit" class="btn btn-primary">Submit</button>  <button type="reset" class="btn btn-secondary">Cancel</button>
    </form>
  </form>
</body>
</html>