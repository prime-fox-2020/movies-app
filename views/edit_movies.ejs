    <h1>Edit Movie Information</h1>
    <form action="<%=id%>" method="post">
        <label>Title :</label>
        <br>
        <input type="text" name="name" value="<%=dataMovie[0].name%>">
        <br>
        <label> Released Year :</label>
        <br>
        <input type="number" name="released_year" value="<%=dataMovie[0].released_year%>">
        <br>
        <label> Genre :</label>
        <br>
        <select name ="genre">
            <option  value="Animation" <% dataMovie[0].genre == "Animation" ? "selected" :"" %>>Animation
            </option>
            <option  value="Comedy" <% dataMovie[0].genre == "Comedy" ? "selected" : "" %>>Comedy</option>
            <option  value="Drama" <% dataMovie[0].genre == "Drama" ? "selected" : "" %>>Drama</option>
            <option  value="Horror" <% dataMovie[0].genre == "Horror"? "selected" : "" %>>Horror</option>
            <option  value=" Religious" <% dataMovie[0].genre == "Animation" ?"selected" : "" %>>Animation
            </option>
            <option  value="Thriller" <% dataMovie[0].genre == "Thriller" ? "selected"  : "" %>>Thriller
            </option>
        </select>
        <br>
        <br>
        <select name ="PHid">
            <option>----SELECT----</option>
        <% for(let i = 0;i < dataProd.length; i++) { %>
            <!-- <option  value="<%= dataProd[i].id %>" <% dataMovie[0].ProductionHouseId == dataProd[i].id ? "selected" : "" %>> <%= dataProd[i].prodHouse_name %></option> -->
            <option value="<%= dataProd[i].id%>"   <% if(dataMovie[0].ProductionHouseId === dataProd[i].id){%> selected <%}%>><%= dataProd[i].prodHouse_name%></option>
            <% } %>
        </select>
        <br>
        <br>
        <button type="submit">Save</button>
        <a href="/movies"><button> Cancel </button></a>
    </form>
</body>