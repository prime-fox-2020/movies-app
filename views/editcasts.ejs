<%- include('partials/top.ejs') %>

<h1>Edit The Movie</h1>

<form action="/casts/edit/<%= data.id %>" method="POST">
  <label for="first_name">First Name</label><br>
  <input type="text" id="first_name" name="first_name" value="<%= data.first_name %>" autofocus required>
  <br><br>
  <label for="last_name">Last Name</label><br>
  <input type="text" id="last_name" name="last_name" value="<%= data.last_name %>" required>
  <br><br>
  <label for="birth_year">Birth Year</label><br>
  <input type="number" id="birth_year" name="birth_year" value="<%= data.birth_year %>" maxlength="4" required>
  <br><br>
  <label for="phone_number">Phone Number</label><br>
  <input type="text" id="phone_number" name="phone_number" value="<%= data.phone_number %>" required>
  <br><br>
  <label for="gender">Gender</label>
  <div class="genderselection">
  <% if (data.gender == "Male"){ %>
    <input type="radio" id="gender" name="gender" value="Male" checked>
    <label for="gender">Male</label><br>
    <input type="radio" id="gender" name="gender" value="Female">
    <label for="gender">Female</label><br>
  <% } else { %>
    <input type="radio" id="gender" name="gender" value="Male">
    <label for="gender">Male</label><br>
    <input type="radio" id="gender" name="gender" value="Female" checked>
    <label for="gender">Female</label><br>
  <% } %>
  </div>
  <br>
  <button type="submit">Update</button>
  <button><a href="/casts">Cancel</a></button>
</form>

<%- include('partials/bottom.ejs') %>