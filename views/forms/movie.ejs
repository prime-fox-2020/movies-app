<% 
    if (editing && Array.isArray(data)) {
        data = data[0];
    } 
%>
<form action="<%= editing ? `/movies/update/${data.id}` : `/movies/add` %>" method="POST">
    <div class="form-group">
      <label for="exampleInputEmail1">Title</label>
      <input type="text" class="form-control" id="exampleInputEmail1" name="name" value="<%= editing ? data.name : `` %>">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Rating</label>
        <input type="text" class="form-control" id="exampleInputEmail1" name="rating" value="<%= editing ? data.rating : `` %>">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Released Year</label>
        <input type="text" class="form-control" id="exampleInputEmail1" name="releasedYear" value="<%= editing ? data.releasedYear : `` %>">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Genre</label>
        <select name="genre" class="form-control">
            <option value="Comedy" <% if (editing && data.genre == 'Comedy') {%>selected<%}%>>Comedy</option>
            <option value="Horror" <% if (editing && data.genre == 'Horror') {%>selected<%}%>>Horror</option>
            <option value="Thriller" <% if (editing && data.genre == 'Thriller') {%>selected<%}%>>Thriller</option>
            <option value="Action" <% if (editing && data.genre == 'Action') {%>selected<%}%>>Action</option>
            <option value="Animasi" <% if (editing && data.genre == 'Animasi') {%>selected<%}%>>Animasi</option>
            <option value="Sci-Fi" <% if (editing && data.genre == 'Sci-Fi') {%>selected<%}%>>Sci-Fi</option>
        </select>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Production House</label>
        <select class="form-control" name="ProductionHouseId">
            <% if (phlists) {phlists.forEach(element => { %>
            <option value="<%= element.id %>" <% if (editing && data.id == element.id) {%>selected<%}%>><%= element.name %></option>
            <% })} %>
        </select>
      </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>