<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>movie by id page</title>
    <%- include('partials/style-nav-bar')%>
    <%- include('partials/style-table')%>
</head>
<body>
    <%- include('partials/nav-bar')%>
    
    <h1>MOVIE BY ID</h1>
    
    <% if (pesan) {%>
        <h4><%=pesan%></h4>
    <%}%>
    <table border="1">
        <thead>
            <tr>
                <td>ID</td>
                <td>MOVIES</td>
                <td>RELEASED YEAR</td>
                <td>GENRE</td>
                <td>PRODUCTION HOUSE</td>
                <td>RATING</td>
                <td colspan="2">ACTION</td>
            </tr>
        </thead>
        <tbody>
            <%for (let i in dataById) {%>
                <tr>
                    <td><%=dataById[i].id%></td>
                    <td><%=dataById[i].name%></td>
                    <td><%=dataById[i].released_year%></td>
                    <td><%=dataById[i].genre%></td>
                    <% if (dataById[i].ProductionHouseId === null) {%>
                        <td>Unknown</td>
                    <%}%>

                    <% if (dataById[i].ProductionHouseId !== null) {%>
                        <td><%=dataById[i].ProductionHouse.name_prodHouse%></td>
                    <%}%>
                    <td><%=dataById[i].rating%></td>
                    <td><button><a href="/movies/edit/<%=dataById[i].id%>">EDIT</a></button></td>
                    <td><button onclick="return confirm('Apakah anda ingin menghapus data Movies bernama <%=dataById[i].name%>')"><a href="/movies/delete/<%=dataById[i].id%>">DELETE</a></button></td>
                </tr>
            <%}%>
        </tbody>
    </table>
</body>
</html>