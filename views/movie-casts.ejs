<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie App</title>
    <%- include('partials/styles') %>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <h1><%= movie.name %></h1>
            </div>
            <div class="col-md-6">
                <form method="POST">
                    <div class="form-group">
                        <label for="cast">Actor:</label>
                        <select class="form-control" name="cast" id="cast">
                            <option value="">======SELECT======</option>
                            <% casts.forEach(cast => { %>
                                <option value="<%= cast.id %>"><%= cast.getFullName() %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="role">Role</label>
                        <input class="form-control" type="text" id="role" name="role" placeholder="e.g: Pemeran Utama Wanita">
                    </div>
                    <input class="btn btn-primary" type="submit" value="Save">
                    <a class="btn btn-danger" href="/movies">Cancel</a>
                </form>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                <% movie.Casts.forEach(movieCast => { %>
                    <tr>
                        <td><%= movieCast.getFullName() %></td>
                        <td><%= movieCast.MovieCast.role %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <%- include('partials/scripts') %>
</body>
</html>