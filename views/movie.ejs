<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Movie List</title>
  </head>
  <body>
    <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Movie</th>
        <th scope="col">Released Year</th>
        <th scope="col">Genre</th>
        <th scope="col">Production House</th>
        <th scope="col">Rating</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <% for(let i = 0; i < data.length; i++) {%>
      <tr>
        <td ><%=data[i].name%></td>
        <td ><%=data[i].released_year%></td>
        <td ><%=data[i].genre%></td>
        <% if(!data[i].ProductionHouseId){ %>
            <td>unknown</td>
            <% } else { %>
              <td><%= data[i].ProductionHouse.name_prodHouse %></td>
            <% } %>
      <td ><%=data[i].Rating%></td>
            <td><a href="/movie/<%= data[i].id %>/edit">Edit</a> <a href="/movie/<%= data[i].id %>/delete">Delete</a>  <a href="/movie/<%=data[i].id%>/addCast">Add Cast</a></td>
      </tr>
    <% } %>
    <a href="/movie/add">Add</a>
  </body>
</html>
