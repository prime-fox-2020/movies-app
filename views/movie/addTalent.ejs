<%- include('../partials/header') %>

  <h2><%= movie.title %></h2>
  
<% if (alert.type) { %>
  <%- include('../partials/alert') %>
<% } %>

  <h3>Add cast :</h3>

  <form action="/movies/<%= movie.id %>/add-talent" method="post">
    <div class="form-group">
      <label for="CastId">Actors</label>
      <select name="CastId" class="form-control">
        <option value="">---SELECT---</option>
      <% casts.forEach(cast => { %>
        <option value="<%= cast.id %>" ><%= cast.getFullName() %></option>
      <% }) %>
      </select>
    </div>
    
    <div class="form-group">
      <label for="role">Role</label>
      <input type="text" name="role" class="form-control" placeholder="e.g: Lead Actor">
    </div>
    
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Save</button>
    </div>
  </form>

  <h3>List Cast</h3>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Actor</th>
        <th scope="col">Role</th>
      </tr>
    </thead>
    <tbody>
    <% if (movieCasts.length) { %>
      <% movieCasts.forEach((cast, idx) => { %>
        <tr>
          <th scope="row"><%= idx + 1 %></th>
          <td><%= cast.Cast.getFullName() %></td>
          <td><%= cast.role %></td>
        </tr>
      <% }) %>
    <% } %>
    </tbody>
  </table>

</main>

<%- include('../partials/footer') %>