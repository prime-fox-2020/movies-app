<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>EDIT</title>
</head>
<body>
    <h1>EDIT MOVIE</h1>

    <form action="edit" method="post">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%= dataMovie.name %>">
        
        <label for="released_year">Released Year</label>
        <input type="number" name="released_year" id="released_year" value="<%= dataMovie.released_year %>">

        <label for="genre">Genre</label>
        <select name="genre" id="genre">
            <option value="animation" <%= dataMovie.genre === 'animation' ? 'selected' : '' %> >Animation</option>
            <option value="comedy" <%= dataMovie.genre === 'comedy' ? 'selected' : '' %>>Comedy</option>
            <option value="drama" <%= dataMovie.genre === 'drama' ? 'selected' : '' %>>Drama</option>
            <option value="horor" <%= dataMovie.genre === 'horor' ? 'selected' : '' %>>Horor</option>
            <option value="religious" <%= dataMovie.genre === 'religious' ? 'selected' : '' %>>Religious</option>
            <option value="thriller" <%= dataMovie.genre === 'thriller' ? 'selected' : '' %>>Thriller</option>
        </select>

        <label for="ProductionHouseId">Production Houses</label>
        <select name="ProductionHouseId" id="ProductionHouseId">
            <% dataProdHouse.forEach(el => { %>
             <option value=<%= el.id %> <%= dataMovie.ProductionHouseId === el.id ? 'selected' : '' %> ><%= el.name_prodHouse %></option>
            <% }) %>
        </select>

        <button type="submit">EDIT</button>
    </form>
</body>
</html>