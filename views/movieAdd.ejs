<%- include ('./partials/header', {title: 'Movie'}) %>
<% if(error){ %>
<p><%= error %></p>
<%} %>

<form action="/movies/add" method = 'POST'>
  <h1>Movie Name</h1>
<input type="text" name = 'name' value = '' placeholder="Movie name"> <br>
<h1>Released Year</h1>
<input type="text" name = 'released_year' value = '' placeholder="released_year">  <br>
<h1>Rating</h1>
<input type="text" name = 'rating' value = '' placeholder="rating">  <br>
<h1>Genre</h1>
<select name="genre">
  <option value="">Choose</option>
  <option value="animation">animation</option>
  <option value="comedy">Comedy</option>
  <option value="drama">Drama</option>
  <option value="horor">horor</option>
  <option value="religious">horor</option>
  <option value="thriller">thriller</option>
</select>

<button type="submit">Click</button>
</form>






