<!DOCTYPE html>

<head>
    <title>Movie List</title>
</head>

<body>
    <h1> Movie's List</h1>
    <a href="movies/add"><button>Register Movie</button></a>
    <a href="/"><button>Back</button></a>
    <table border=1>
        <tr>
            <th>Movie Title</th>
            <th>Released Year</th>
            <th>Genre</th>
            <th>Production House</th>
            <th>Action</th>
        </tr>
        <% for(let i = 0 ; i < data.length; i++) { %>
        <tr>
            <td><%=data[i].name%></td>
            <td><%=data[i].released_year%></td>
            <td><%=data[i].genre%></td>
            <td><% if( data[i].ProductionHouseId == null) { %>
                <%= status %>
                <% } else { %>
            <%= data[i].ProductionHouse.prodHouse_name %>
            <% } %>
            </td>
            <td><a href="movies/edit/<%=data[i].id%>"><button>Edit</button></a> | <a href="movies/delete/<%=data[i].id%>"><button>Delete</button></a></td>
        </tr>
        <% } %>
    </table>
</body>