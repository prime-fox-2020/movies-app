<%- include('./partials/header') %> 

<div class="container" style="max-width: 1000px;">
  <h1 class="display-4 mt-5">Movies</h1>
  <a href="/movies/add" class="btn btn-success my-3">Add Movie</a>
  <table class="table table-bordered">
    <thead class="table-info">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Released Year</th>
        <th scope="col">Genre</th>
        <th scope="col">Production House</th>
        <th scope="col">Option</th>
      </tr>
    </thead>
    <tbody>

      <% for(let movie of movies) { %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.released_year %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.ProductionHouse.name_prodHouse %> </td>
        <td>
          <a href="/movies/<%= movie.id %>/edit" class="btn btn-info">Edit</a>
          <button type="button" class="btn btn-info" data-toggle="modal" data-target="#delete<%= movie.id %>">Delete</button>
          <a href="/movies/<%= movie.id %>/casts" class="btn btn-info">Add Cast</a>
        </td>
      </tr>

      <!-- Modal -->
      <div class="modal fade" id="delete<%= movie.id %>" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Are you sure to delete this Movie?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <a href="/movies/<%= movie.id %>/delete" class="btn btn-danger">Yes, i am sure</a>
            </div>
          </div>
        </div>
      </div>
      <%}%>
    </tbody>
  </table>
  </div>
</div>

<%- include('./partials/footer') %> 