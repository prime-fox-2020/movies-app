<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Movies Page</title>
</head>
<body>
    <ul class="nav nav-pills">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/prodHouse">Production House</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/movie">Movies</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/cast">Casts</a>
        </li>
    </ul>
    <br>
    <h1>List Movies</h1><br>
    <% if(alert.msg) { %>
        <%= alert.msg %>
    <% } %><br>

    <a class="btn btn-success" href="/movie/add" role="button">Add Movies</a>
    <% if (data) { %>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Released Year</th>
                <th scope="col">Genre</th>
                <th scope="col">Production House</th>
                <th scope="col">Rating</th>
                <th scope="col" colspan="2">Action</th>
              </tr>
            </thead>
            <!-- <% const keys = Object.keys(data)%> -->
            <% for (let i = 0;i<data.length; i++) { %>
                <tbody>
                  <tr>
                    <td><%= data[i].name %></td>
                    <td><%= data[i].released_year %></td>
                    <td><%= data[i].genre %></td>
                    <td><%= data[i].ProductionHouse.name_prodHouse %></td>
                    <td><%= data[i].rating %></td>
                    <td><a class="btn btn-info" href="/movie/edit/<%= data[i].id %>" role="button">Edit</a></td>
                    <td><a class="btn btn-info" href="/movie/delete/<%= data[i].id %>" role="button">Delete</a></td>
                    <td><a class="btn btn-info" href="/movie/showCast/<%= data[i].id%>" role="button">Add Cast</a></td>
                  </tr>
                </tbody>
            <% } %>
          </table>
    <% } %>


    <!-----Naro Script nya---->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>