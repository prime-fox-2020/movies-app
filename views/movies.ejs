<%- include('partials/header') %>

    <br>
    <h1 class="text-center">Production House</h1><br>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Movie</th>
                <th scope="col">Release Year</th>
                <th scope="col">Genre</th>
                <th scope="col">Production House</th>
                <th scope="col" colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(data => { %>
            <tr>
                <td><%= data.name %></td>
                <td><%= data.released_year %></td>
                <td><%= data.genre %></td>

                <% if(data.name_prodHouse == undefined || data.name_prodHouse == null) { %>
                <td>unknown</td>
                <% } else {%>
                <td><%= data.name_prodHouse %></td>  
                <% } %>
                
                <td><a href="movies/<%= data.id %>/edit">Edit</a> | <a href="movies/<%= data.id %>/delete">Delete</a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>

    <a href="/movies/addMovieForm" class="btn btn-primary">Add Movie</a>

<%- include('partials/footer') %>