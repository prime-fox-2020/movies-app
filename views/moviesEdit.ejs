    <body>
        <h1>Edit Movies Data</h1>
        <form action="/mv/<%= data.id %>/edit" method="post">
        <label for = "">ID</label>
        <input type="text" name="id" value="<%= data.id %>" readonly> <br> <br>
        <br>
        <label for = "">Name</label>
        <input type="text" name="name" value="<%= data.name %>" readonly> <br> <br>
        <br>
        <label for = "">Released Year</label>
        <input type="text" name="released_year" value="<%= data.released_year %>"> <br> <br>
        <br>


        <label for="genre">Genre</label><br>
        <select name="genre">
          <% const listgenres =['animation','comedy','drama','horor','thriller'] %>
          <% for(let i =0; i<listgenres.length;i++){ %>
            <% if(data.genre == listgenres[i]){ %>
              <option value="<%= listgenres[i] %>" selected><%= listgenres[i] %></option>
            <% }else{ %>
              <option value="<%= listgenres[i] %>"><%= listgenres[i] %></option>
            <% } %>
          <% } %>
        </select>
        <br>
        <br>
        <br>


        <label for="production_house">Production House</label><br>
        <select name="production_house">
            <% const listPH =['Walt Disney Studios','Pixar','Warner Bros','Universal Pictures','Paramount Picture'] %>
            <% for(let i =0; i<listPH.length;i++){ %>
                <% if(data.ProductionHouse.name_prodHouse == listPH[i]){ %>
                  <option value="<%= listPH[i] %>" selected><%= listPH[i] %></option>
                <% }else{ %>
                  <option value="<%= listPH[i] %>"><%= listPH[i] %></option>
                <% } %>
              <% } %>
        </select>
        <br>
        <br>
        <br>



        <button type="submit">SAVE</button>
    
        </form>
    </body>



