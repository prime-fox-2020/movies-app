    <body>
        <h1>Movies</h1>
        <%- include('../partials/navbar.ejs') %>
        
        <table border = "2">
            <thead>
                <tr>
                    <th>ID </th>
                    <th>Movie</th>
                    <th>Released Year</th>
                    <th>Genre</th>
                    <th>Production House</th>
                    <th>Action</th>
