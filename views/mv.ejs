                        <%= "Unknown" %>
                        <% }else{%>
                        <%= el.productionHouseId %> <%=el.ProductionHouse.name_prodHouse %></td>
                        <% } %>
                    <td>
                    <a href="/mv/<%= el.id %>/edit"><button>Edit</button></a>
                    <a href="/mv/<%= el.id %>/delete" onclick="return confirm('Are you sure?')"><button>Delete</button></a>
                    <a href="/mv/<%= el.id %>/addcast"><Button>Add Cast</Button></a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
