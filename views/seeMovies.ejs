<%-  include ('./partials/header', {title: 'Movie'}) %>


<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand" href='/'>Home</a> 
  <a class="navbar-brand" href='/casts'> <button>Cast</button> </a>
</nav>
<h1><%=casts.fullName()%></h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Movie</th>
      <th scope="col">Realeased Year</th>
      <th scope="col">Age When Movie Realeased</th>
      <th scope="col">Role</th>
      <th scope="col">Age</th>
     
      
  </thead>
  <tbody>

  <%  if(casts){ %>

    <% for(let i = 0; i < casts.Movies.length; i++){ %>
     
      <tr>
        <td> <%=casts.Movies[i].name %> </td>
        <td> <%=casts.Movies[i].released_year %> </td>
        <td> <%= age(casts.Movies[i].released_year, casts.birth_year) %> </td>
        <td> <%=casts.Movies[i].MovieCast.role %> </td>
        <td> <%=casts.birth_year%> </td>
   <% } %>
  <%}%>
  </tbody>
</table>



<%-  include ('./partials/footer') %>